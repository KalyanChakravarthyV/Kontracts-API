# Database Configuration
DATABASE_URL=postgresql://user:password@host:port/database

# SSL Certificate Path (optional - only needed if using SSL)
DB_SSL_CERT_PATH=./config/ca.pem

# Auth0 OAuth2 Configuration
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_REDIRECT_URI=http://localhost:8001/api/v1/auth/callback
# AUTH0_AUDIENCE is optional (API Identifier from Auth0 if you need API access tokens)
AUTH0_AUDIENCE=

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ACCESS_TOKEN_EXPIRE_MINUTES=30
TOKEN_ISSUER=lease-accounting-api
TOKEN_AUDIENCE=lease-accounting-api
